<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray"
    android:layout_height="140dp"
    android:layout_width="120dp"
    android:id="@+id/rlDailyCity">

    <ImageView
        android:layout_width="50dp"
        app:srcCompat="@android:color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/forecastIcon"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/dateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp" />

    <TextView
        android:text="SomeTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempText"
        android:layout_below="@+id/forecastIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:text="someDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateText"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tempText"
        android:layout_alignStart="@+id/tempText"
        android:gravity="center_horizontal" />

</RelativeLayout>