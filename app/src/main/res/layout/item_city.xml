<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="55dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="City, Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cityNameText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" />

        <TextView
            android:text="30.00() C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperatureText"
            android:layout_alignBaseline="@+id/cityNameText"
            android:layout_alignBottom="@+id/cityNameText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp" />

        <TextView
            android:text="Updated on: 10/10/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updatedDateText"
            android:layout_below="@+id/temperatureText"
            android:layout_alignRight="@+id/temperatureText"
            android:layout_alignEnd="@+id/temperatureText" />
    </RelativeLayout>
</LinearLayout>